<% layout("layouts/boilerplate.ejs") -%>
<div class="row mt-3">
    <div class="col-6 offset-3"><h1>Login</h1></div>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                    <input 
                    type="username"
                    name="username"
                    id="username"
                    class="form-control"
                    required
                    >
                    
            </div>
          
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                    <input 
                    type="password"
                    name="password"
                    id="password"
                    class="form-control"
                    required
                    >
                    
            </div>
            <button class="btn btn-success mt-2">Login</button>
        </form>
        </div>
        </div>