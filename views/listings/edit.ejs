<% layout("layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Edit The Listing </h1>
    
    <form method="POST" action="/listings/<%=elisting._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
        <input type="text" name="listing[title]" value="<%=elisting.title%>" class="form-control" required>
        <div class="valid-feedback">Title looks Good!</div>
        </div>
        <div class="mb-3">
            <lable for="Description" class="form-label">Description</lable>
        <textarea type="text" name="listing[description]" class="form-control" required><%=elisting.description%></textarea>
        <div class="invalid-feedback">Description should be Valid</div>    
    </div>
    <div class="mb-3">
      <p>Original image</p>
      <img src="<%=originalurl%>"/>
   
    </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload New Image</lable>
        <input type="file" name="listing[image]" class="form-control" >
       
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
        <input type="number" name="listing[price]" value="<%=elisting.price%>" required>
        <div class="invalid-feedback">Price should be Valid</div>
    </div>
    
    
        <div class="mb-3 col-md-8">
            <lable for="location" class="form-label">Location</lable>
        <input type="text" name="listing[location]" value="<%=elisting.location%>" required>
        <div class="invalid-feedback">Location should be Valid</div>
        </div>
        </div>
        <div class="mb-3">
            <lable for="country" class="form-label">Country</lable>
        <input type="text" name="listing[country]" value="<%=elisting.country%>" required>
        <div class="invalid-feedback">Country name should be Valid</div>
      </div>
      <div class="mt-4">
        <button class="btn btn-dark">Edit</button>
    </div>
    </form>
</div>
</div>

</body>