<% layout("layouts/boilerplate.ejs") -%>

 
  <style>
    #filters {
      display: flex;
      /* flex-wrap: wrap; */
      width: 100% !important;
      align-items: center;
      height: 100px !important;
      overflow: scroll;
    }
    #filters a {
      color: black;
      text-decoration: none;
    }
    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
